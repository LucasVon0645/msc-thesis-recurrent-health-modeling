{
  "name": "Recurrent Health Events - Master Thesis - Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".." // Keep the parent directory as context to access the Dockerfile
  },

  // Removed containerEnv.LD_LIBRARY_PATH that referenced R paths

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash" // Default terminal
      },
      "extensions": [
        "ms-python.python",            // Python extension
        "ms-python.vscode-pylance",    // Pylance
        "ms-toolsai.jupyter",          // Jupyter
        "njpwerner.autodocstring",     // AutoDocstring
        "ms-toolsai.vscode-ai-datawrangler", // Data Wrangler
        "ms-azuretools.vscode-docker", // Docker
        "mhutchie.git-graph"           // Git Graph
      ]
    }
  },

  // Removed SSH key chmods; just install deps
  "postCreateCommand": "poetry install",

  "remoteUser": "vscode" // User inside the container

  // "features": {} // (optional) add dev container features here
}
